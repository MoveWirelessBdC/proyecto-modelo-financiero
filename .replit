modules = ["nodejs-20", "web", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FinMod Pro"

[[workflows.workflow]]
name = "FinMod Pro"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"(cd server && npm start) & (cd dashboard-app && npm run dev) & wait\""
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33153
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd server && npm start & cd dashboard-app && npx serve -s dist -l 5000 --no-clipboard --no-port-switching"]
build = ["bash", "-c", "cd dashboard-app && npm run build"]
